        f"ü•≥ –î–µ–Ω—å –Ω–∞—Ä–æ–¥–∂–µ–Ω–Ω—è —É @{user}! üéÇ\n"
        f"‚ú® –ù–µ –∑–∞–±—É–¥—å –ø—Ä–∏–≤—ñ—Ç–∞—Ç–∏ —Ç–∞ –∑—Ä–æ–±–∏—Ç–∏ —Ü–µ–π –¥–µ–Ω—å –Ω–µ–∑–∞–±—É—Ç–Ω—ñ–º! üíå\n"
        f"üéÅ –û—Å—å —Å–ø–∏—Å–æ–∫ –±–∞–∂–∞–Ω—å: {info['wishlist']}\n"
        f"üí´ –ù–µ—Ö–∞–π —Ü–µ–π –¥–µ–Ω—å –±—É–¥–µ –Ω–∞–ø–æ–≤–Ω–µ–Ω–∏–π —â–∞—Å—Ç—è–º, –ø–æ–¥–∞—Ä—É–Ω–∫–∞–º–∏ —Ç–∞ —á—É–¥–æ–≤–∏–º–∏ –º–æ–º–µ–Ω—Ç–∞–º–∏! üéàüéä"
    )
    bot.send_message(YOUR_CHAT_ID, reminder_text)  # –ó–∞–º—ñ–Ω—ñ—Ç—å YOUR_CHAT_ID –Ω–∞ —Ä–µ–∞–ª—å–Ω–∏–π ID —á–∞—Ç—É

# –ó–∞–ø—É—Å–∫ –ø–µ—Ä–µ–≤—ñ—Ä–∫–∏
check_birthdays()

bot.polling()
